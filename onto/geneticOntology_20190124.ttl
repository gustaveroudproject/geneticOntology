@prefix : <http://example.org/TextualVariation> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .


############
##
## ONTOLOGY
##
############

: 	a owl:Ontology ;
	dc:title "Genetic Network Ontology"@en ;
	dc:description "This ontology is a generic model for genetic entities and their relationships, applicable mainly in the fields of genetic criticism and scholarly editing"^^xsd:string ;
	dc:modified "2019-01-01"^^<http://www.w3.org/2001/XMLSchema#date> ;
	dc:rights "This work is distributed under a Creative Commons Attribution 4.0 International License (http://creativecommons.org/licenses/by/4.0/)."^^xsd:string ;
	dc:contributor "Alessio Christen"^^xsd:string ;
	dc:creator "Elena Spadini"^^xsd:string ;
	owl:versionInfo "1.0"^^xsd:string .
	 

############
##
## CLASSES
##
############


:Document 	a owl:Class ;
			rdfs:label "Document"@en ;
			dc:description "A document corresponds to FRBRoo class F2 'Expression'"@en ;
			rdfs:comment "A manuscript, typescript or printed text with manuscript evidence kept in an archive or private collection."@en .					

:Publication 	a owl:Class ,
				[
                rdf:type owl:Restriction ;
                owl:onProperty :publicationIsPartOfGeneticDossier ;
                owl:cardinality "1"^^xsd:nonNegativeInteger                      
                  ];
                dc:description "A publication corresponds to FRBRoo class F2 'Expression'"@en ;
				rdfs:label "Publication"@en ;
				rdfs:comment "Print and published text: a book, a section of a book or a periodical article."@en .

:GeneticDossier		a owl:Class ;
					rdfs:label "Genetic dossier"@en ;
					dc:description "The genetic dossier has no direct correspondence in FRBRoo. Its role is close to that of FRBRoo class F1 'Work', as a higher instance that aggregates Expressions. Nevertheless, the FRBRoo Work postulates the existence of an original idea that dominates the Expressions; this is not always the case in the genesis of a text, where the original idea might vary greatly and does not follow a coherent evolution. This also apply to the properties linked to the genetic dossier, which cannot be mapped to properties in FRBRoo."@en ;
					rdfs:comment "The genetic dossier includes the avant-texte of a work, which has been published or conceived for publication." .



###############
##
## PROPERTIES
##
###############


#========== Document genetic stage ===========#
:hasGeneticStage	a owl:DatatypeProperty ;
					rdfs:label "has genetic stage"@en ;
					dc:description "The property :hasGeneticStage has no correspondence in FRBRoo."@en ;
					rdfs:domain :Document ;
					rdfs:range rdfs:Literal .



#========== Genetic dossier ===========#
:isPartOfGeneticDossier 	a owl:ObjectProperty ;
							rdfs:label "is part of"@en ;
							rdfs:range :GeneticDossier .

:documentIsPartOfGeneticDossier 	a owl:ObjectProperty ;
									rdfs:subPropertyOf :isPartOfGeneticDossier ;
									rdfs:label "document is part of"@en ;
									rdfs:domain :Document ;
									rdfs:range :GeneticDossier .

:publicationIsPartOfGeneticDossier 	a owl:ObjectProperty ;
									rdfs:subPropertyOf :isPartOfGeneticDossier ;
									rdfs:label "publication is part of"@en ;
									rdfs:domain :Publication ;
									rdfs:range :GeneticDossier .



#========== isRewrittenIn ===========#
:isRewrittenIn 	a owl:ObjectProperty ;
				rdfs:label "is rewritten in"@en ;
				dc:description "The property :isRewrittenIn would correspond to the FRBRoo property R2 'is derivative of' refined by E55 Type 'Revision'; but R2 has the class F1 Work as both domain and range, while :isRewrittenIn links two Documents, i.e. two Expressions. Therefore, no direct correspondence can be set. The same applies to its sub-properties."@en ;
				rdfs:domain :Document ;
				rdfs:range :Document .

:diaryRewrittenIn 	a owl:ObjectProperty ;
						rdfs:subPropertyOf :isRewrittenIn ;
						rdfs:label "diary rewritten in"@en ;
						rdfs:domain :Document ;
						rdfs:range :Document .

:avantTexteRewrittenIn 	a owl:ObjectProperty ;
						rdfs:subPropertyOf :isRewrittenIn ;
						rdfs:label "avant-texte rewritten in"@en ;
						rdfs:domain :Document ;
						rdfs:range :Document .



#========== isReusedIn ===========#
:isReusedIn 	a owl:ObjectProperty ;
				rdfs:label "is reused in"@en ;
				dc:description "The property :isReusedIn corresponds to CIDOC-CRM property P165 'incorporates', also used in FRBRoo."@en ;
				rdfs:range :GeneticDossier .


:diaryReusedIn	a owl:ObjectProperty ;
				rdfs:subPropertyOf :isReusedIn ;
				rdfs:label "diary reused in"@en ;
				rdfs:domain :Document ;
				rdfs:range :GeneticDossier .


:pubReusedInNewText 	a owl:ObjectProperty ;
						rdfs:subPropertyOf :isReusedIn ;
						rdfs:label "publication reused in new text"@en ;
						rdfs:domain :Publication ;
						rdfs:range :GeneticDossier .

:pubPartiallyReusedInCollection 	a owl:ObjectProperty ;
									rdfs:subPropertyOf :isReusedIn ;
									rdfs:label "publication partially reused in collection"@en ;
									rdfs:domain :Publication ;
									rdfs:range :GeneticDossier .


:pubIntegrallyReusedInCollection 	a owl:ObjectProperty ;
								rdfs:subPropertyOf :isReusedIn ;
								rdfs:label "publication integrally reused in collection"@en ;
								rdfs:domain :Publication ;
								rdfs:range :GeneticDossier .


:pubIsReissued 	a owl:ObjectProperty ;
				rdfs:subPropertyOf :isReusedIn ;
				rdfs:label "publication is reissued"@en ;
				rdfs:domain :Publication ;
				rdfs:range :GeneticDossier .






